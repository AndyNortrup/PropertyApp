<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lin_label"
        android:text="@string/lin_label"
        style="@style/search_result_label"/>
    <TextView
        android:id="@+id/lin_search_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lin_nomenclature_label"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lin_nomenclature_label"
        android:text="@string/lin_nomenclature_label"
        style="@style/search_result_label"
        android:layout_below="@+id/lin_label"
        />
    <TextView
        android:id="@+id/lin_search_nomenclature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_label"
        android:layout_toRightOf="@+id/lin_nomenclature_label"/>
    
</RelativeLayout>