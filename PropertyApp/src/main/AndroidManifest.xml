<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.NortrupDevelopment.PropertyApp"
    android:versionCode="3"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/PropertyApp"
        android:name=".PropertyCommanderApp">

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".view.SearchActivity"/>

        <provider
            android:name=".model.PropertyBookContentProvider"
            android:authorities="com.NortrupDevelopment.PropertyApp.provider"
            android:exported="false" />
        <provider
            android:name=".presenter.SearchSuggestionProvider"
            android:authorities=
                "com.NortrupDevelopment.PropertyApp.SuggestionProvider"
            />

        <service
            android:name=".model.PBICImportService"
            android:exported="false" />

        <activity android:name=".view.LINDetailActivity"/>
        <activity android:name=".view.ImportPropertyBookActivity" />
        <activity android:name=".view.LINBrowserActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.SearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">

            <intent-filter >
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity android:name=".view.PropertyBookStatisticsActivity"/>
    </application>

</manifest>